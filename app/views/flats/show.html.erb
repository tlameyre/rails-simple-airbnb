<div class="map" style="background-image: url('https://source.unsplash.com/random')">

</div>
<div class="container d-flex">
  <div class="col-8">
    <div class="shadow-sm bg-light my-3 p-3">
      <h1><%= @flat.name %></h1>
      <p><%= @flat.address %></p>
    </div>
    <div class="shadow-sm bg-light my-3 p-3">
      <h2>A bit more about this flat...</h2>
      <p><%= @flat.description %></p>
    </div>
  </div>
  <div class="col-4">
    <div class="shadow-sm bg-light my-3 p-3">
      <h5>Book this place!</h5>
      <form class="row">
        <div class="col">
          <div class="form-row align-items-center">
            <div class="input-group mb-2">
              <div class="input-group-prepend">
                <div class="input-group-text">From:</div>
              </div>
              <input type="text" class="form-control" id="i" placeholder="12/08/2020">
            </div>
          </div>
          <div class="form-row align-items-center">
            <div class="input-group mb-2">
              <div class="input-group-prepend">
                <div class="input-group-text">To:</div>
              </div>
              <input type="text" class="form-control" placeholder="15/12/2020">
            </div>
          </div>
          <div class="form-row align-items-center">
            <a href="#" class="col btn btn-success">Book</a>
          </div>
        </div>
      </form>
    </div>
    <div class="shadow-sm bg-light my-3 p-3">
      <h3>Details</h3>
      <div class="d-flex justify-content-left">
        <span class="card-text mr-3 bold"><i class="fas fa-euro-sign"></i> <%= @flat.price_per_night %></span>
        <span class="card-text ml-3 bold"><i class="fas fa-users"></i> <%= @flat.number_of_guests %></span>
      </div>
    </div>
    <div class="d-flex justify-content-between align-items-center shadow-sm bg-light my-3 p-3">
      <h6 class="m-0">Share</h6>
      <div class="d-flex">
        <h3 class="my-0 mr-2"><i class="fab fa-facebook-square"></i></h3>
        <h3 class="my-0 mr-2"><i class="fab fa-twitter-square"></i></h3>
        <h3 class="my-0 mr-2"><i class="fab fa-pinterest-square"></i></h3>
        <h3 class="my-0 mr-2"><i class="fas fa-envelope-square"></i></h3>
      </div>
    </div>
  </div>
</div>
